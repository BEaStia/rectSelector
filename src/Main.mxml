<?xml version="1.0"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" width="600" height="600" initialize="onCreate()" xmlns:s="library://ns.adobe.com/flex/spark"
               xmlns:mx="library://ns.adobe.com/flex/mx">
    <fx:Script>
        <![CDATA[
        import ru.sq.Field;
        import mx.core.UIComponent;

        private function onCreate():void {
            var ref:UIComponent = new UIComponent();
			/**
			 * I made two variants of fields:
				 * 1) I draw rectangles manually
				 * 2) I draw rectangles by using them as Sprites and loading an asset.
				 * In the code below i'm creating instance of first variant field and adding it to application
			 */
            var child:Field = new Field();
            addElement(ref);
            ref.addChild(child);
        }
        ]]>
    </fx:Script>
</s:Application>
